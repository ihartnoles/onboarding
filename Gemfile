#gem 'activerecord-oracle_enhanced-adapter', :git => 'git://github.com/rsim/oracle-enhanced.git'
gem 'activerecord-sqlserver-adapter'
gem 'tiny_tds'

#cas adapter
gem 'rubycas-client'

#httparty - to call API's
gem 'httparty'


# Use SCSS for stylesheets
